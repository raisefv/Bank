<Window x:Class="Bank.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <Grid x:Name="User1Grid" Visibility="Visible" Margin="10,60,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Margin="0,-68,20,88">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="25*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="104*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ФИО:" VerticalAlignment="Top" Margin="5,17,80,0" Height="20" />
                <TextBox Grid.Row="0" Margin="110,19,380,0" x:Name="FullNameTextBox" Grid.ColumnSpan="2" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Паспорт:" VerticalAlignment="Center" Margin="5" />
                <TextBox Grid.Row="1" Margin="110,9,380,34" x:Name="PassportTextBox" Grid.ColumnSpan="2" Grid.RowSpan="2" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата рождения:" VerticalAlignment="Center" Margin="5" />
                <DatePicker Grid.Row="2" Margin="108,5,380,5" x:Name="BirthDatePicker" Grid.ColumnSpan="2" />

                <Button Grid.Row="3" Grid.Column="0" Content="Открыть счет" Width="150" Height="40" Margin="0,2,10,35"
                Click="OpenAccountButton_Click" />

                <Button Content="Закрыть счет" Width="150" Height="40" Margin="155,2,455,35"
                Click="CloseAccountButton_Click" Grid.Row="3" Grid.ColumnSpan="2" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Сумма:" VerticalAlignment="Top" Margin="0,51,10,0" />
                <TextBox Grid.Row="3" Margin="43,51,515,15" x:Name="AmountTextBox" Grid.ColumnSpan="2" />

                <Button Content="Пополнить средства" Margin="0,86,33,310"
                    Click="DepositButton_Click" Grid.RowSpan="4" Grid.Row="3" />
                <Button Content="Снять средства" Margin="132,86,490,310"
                    Click="WithdrawButton_Click" Grid.RowSpan="4" Grid.Row="3" Grid.ColumnSpan="2" />
                <Button Content="Перевести средства" Margin="115,86,347,310"
    Click="TransferButton_Click" Grid.RowSpan="4" Grid.Row="3" Grid.Column="1" />

                <TextBox Grid.Row="6" Margin="277,127,-15,-89" x:Name="OutputUser2TextBox"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" IsReadOnly="True" Grid.Column="1" />

                <TextBox Grid.Row="6" Margin="0,127,423,-89" x:Name="OutputUserTextBox"
 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
 TextWrapping="Wrap" IsReadOnly="True" Grid.ColumnSpan="2" />

            </Grid>
        </Grid>
        <ComboBox x:Name="TransactionTypeComboBox" SelectionChanged="TransactionTypeComboBox_SelectionChanged" Margin="574,44,108,543">
            <ComboBoxItem Content="Пополнение" IsSelected="True" />
            <ComboBoxItem Content="Снятие" />
            <ComboBoxItem Content="Перевод" />
        </ComboBox>

        <ComboBox x:Name="UserComboBox" SelectionChanged="UserComboBox_SelectionChanged" Margin="105,235,545,336" Width="150">
            <ComboBoxItem Content="User 1" IsSelected="True" />
        </ComboBox>

        <TextBox Margin="479,95,13,429" x:Name="OutputTransactionsTextBox"
         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
         TextWrapping="Wrap" IsReadOnly="True" />
        <ComboBox x:Name="User2ComboBox" SelectionChanged="UserComboBox_SelectionChanged" Margin="539,235,111,336" Width="150">
            <ComboBoxItem Content="User 2" IsSelected="True" />
        </ComboBox>
        <Button Content="Сохранить пользователей" Click="SaveUsersButton_Click" HorizontalAlignment="Left" Margin="458,10,0,0" VerticalAlignment="Top" Height="31" Width="162"/>
        <Button Content="Загрузить пользователей" Click="LoadUsersButton_Click" HorizontalAlignment="Left" Margin="625,10,0,0" VerticalAlignment="Top" Height="31" Width="162"/>
    </Grid>
</Window>
